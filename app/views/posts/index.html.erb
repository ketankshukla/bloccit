<h1>All Posts</h1>
<% @posts.each_with_index do |post, index| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <% if post.id % 5 != 0 %>
              <%= link_to post.title, post %>
          <% else %>
              <p><font color="red">CENSORED</font></p>
          <% end %>
        </h4>
      </div>
    </div>
<% end %>